@{
    ViewData["Title"] = "Contact Us Page";
}
@model ContactUS

<div class="container" style="margin:25px;">
<div class="col-10">
<form  asp-action="SaveContact"  role="form">
    <div class="row">
        <div class="col-md-6 form-group">
            <input type="text" asp-for="Name"  class="form-control"  placeholder="Your Name" required="">
        </div>
        <div class="col-md-6 form-group mt-3 mt-md-0">
            <input type="email" asp-for="Email" class="form-control"  placeholder="Your Email" required="">
        </div>
    </div>
    <div class="form-group mt-3">
        <input type="text" asp-for="Subject" class="form-control"  placeholder="Subject" required="">
    </div>
    <div class="form-group mt-3">
        <textarea class="form-control" asp-for="Message"  rows="7" placeholder="Message" required=""></textarea>
    </div>
    <div class="my-3">
        </div>
    <div class="text-center"><button class="btn  btn-success" type="submit">Send Message</button></div>
</form>
</div>
</div>